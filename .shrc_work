# Usefull function
create_call () {
    local call="$1";
    local where="$2";
    ssh "$where" mkdir work/$call
    [ -e "$3" ] && scp  "$where:work/$call" 
    echo work/$call
}

# mount partage
mount_all_work ()
{
    for i in `awk '/enovance/{print $2}' /etc/fstab`;do
        mount $i;
    done
}

test_mount_work()
{
    if ! mount | grep -q enovance; then
        mount_all_work;
    fi
    
}

# documentation
get_doc_subnet ()
{
    test_mount_work
        local doc="$PARTAGES/technique/Infras/$DOC_SUB"
        [ -e "$doc" ] && cp $doc "$HOME/work/$CORP/$DOC_SUB"
        [ -e "$doc" ] || doc="$HOME/work/$CORP/$DOC_SUB"
        screen -d -m openoffice.org-3.2.0 "$doc" >/dev/null 2>&1 &
}
get_doc_as ()
{
    test_mount_work
        local doc="$PARTAGES/technique/Infras/$DOC_AS"
        [ -e "$doc" ] && cp $doc "$HOME/work/$CORP/$DOC_AS"
        [ -e "$doc" ] || doc="$HOME/work/$CORP/$DOC_AS"
        screen -d -m openoffice.org-3.2.0 "$doc" >/dev/null 2>&1 &
}
get_doc_ln ()
{
    test_mount_work
    local doc="$PARTAGES/technique/Infras/$DOC_LN"
